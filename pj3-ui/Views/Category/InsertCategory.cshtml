@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-12 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">ADD Category</h4>
                </div>
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Update</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">

                        <dl class="row">
                            <dt class="col-sm-2">ID:</dt>
                            <dd class="col-sm-10">
                                <input class="form-control" id="ID" value="" readonly>
                            </dd>
                        </dl>

                        <dl class="row">
                            <dt class="col-sm-2">Name:</dt>
                            <dd class="col-sm-10">
                                <input class="form-control" id="name" value="">
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row mt-3">
                    <button class="btn btn-primary" type="submit" id="btnSubmit">Add</button>
                </div>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>


<!-- Template CSS -->
<link rel="stylesheet" href="~/assets/css/User/Register.css">
<link rel="stylesheet" href="~/assets/css/style-starter.css">
<!-- JS -->
<script src="~/js/Category/Insert.js"></script>