@using pj3_ui.Models.Career;
@model List<CareerModel>;

@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="d-flex justify-content-center">
    <div class="table-responsive">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>ShortDecripton</th>
                    <th>Time Start</th>
                    <th>Time End</th>
                    <th>Status</th>
                    <th colspan="4">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td style="max-width: 100px; overflow: hidden;">
                            @item.Title
                        </td>
                        <td style="max-width: 200px; overflow: hidden;">
                            @item.ShortDescription
                        </td>
                        <td style="max-width: 50px; overflow: hidden;">
                            @item.TimeStart.ToString("dd-MM-yyyy")
                        </td>
                        <td style="max-width: 50px; overflow: hidden;">
                            @item.TimeEnd.ToString("dd-MM-yyyy")
                        </td>
                        <td style="max-width: 100px; overflow: hidden;">
                            @{
                                var status = "";
                                if (item.Status == 0)
                                {
                                    status = "Active";
                                }
                                else
                                {
                                    status = "Deactive";
                                }
                            }
                            @status

                        </td>
                        <td>
                            <a class="btn btn-info" href="@Url.Action("DetailAdminUpdate", "Career", new { ID = item.ID })">
                                Update
                            </a>
                            <a class="btn btn-info" style="margin-left:5px" href="#" data-toggle="modal" data-target="#detailModal_@item.ID">Detail</a>
                        </td>
                        <td>
                           
                        </td>

                        <div class="modal fade" id="detailModal_@item.ID" role="dialog">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Details</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <!-- Include the details you want to display -->
                                        <dl class="row">
                                            <dt class="col-sm-2">Position:</dt>
                                            <dd class="col-sm-10">
                                                <input class="form-control" value="@item.Position" readonly>
                                            </dd>
                                        </dl>
                                        <dl class="row">
                                            <dt class="col-sm-2">Price:</dt>
                                            <dd class="col-sm-10">
                                                <input class="form-control" value="@item.Price" readonly>
                                            </dd>
                                        </dl>
                                        <dl class="row">
                                            <dt class="col-sm-2">Skill:</dt>
                                            <dd class="col-sm-10">
                                                <input class="form-control" value="@item.Skill" readonly>
                                            </dd>
                                        </dl>
                                        <dl class="row">
                                            <dt class="col-sm-2">Description:</dt>
                                            <dd class="col-sm-10">
                                                <textarea class="form-control" rows="10" cols="250" readonly>@item.Description</textarea>
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
