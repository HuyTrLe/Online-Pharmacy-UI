@using pj3_ui.Models.Career;
@model List<CareerJob>;

@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<style>
    .wide-column {
        width: 200px; 
    }
</style>
<div class="d-flex justify-content-center">
    <div class="table-responsive">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                   
                    <th>Title</th>
                    <th>ShortDecripton</th>
                    <th class="wide-column">Time Start</th>
                    <th class ="wide-column">
                        Time End</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th colspan="3">FileName</th>
                </tr>
            </thead>
            <tbody>
              
                @foreach (var item in Model)
                {
                    <tr>
                      
                        <td>
                            <a class="btn btn-info" style="margin-left:5px" href="#" data-toggle="modal" data-target="#detailModal_@item.CareerModel.ID">@item.CareerModel.Title</a>                           
                        </td>
                        <td style="max-width: 100px; overflow: hidden;">
                            @{
                                var description = item.CareerModel.ShortDescription.Substring(0, 100) + "...";
                            }
                            @description
                        </td>
                        <td class="wide-column">
                            @item.CareerModel.TimeStart.ToString("dd-MM-yyyy")
                        </td>
                        <td class="wide-column">
                            @item.CareerModel.TimeEnd.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @item.UserModel.UserName
                        </td>
                        <td>
                            @item.UserModel.Email
                        </td>
                        <td style="max-width: 200px; overflow: hidden;">
                            <a style="color:black !important;"href="~/assets/images/User/@item.UserModel.FileName" target="_blank">@item.UserModel.FileName</a>
                            
                        </td>
                        <td>
                            <a class="btn btn-info" href="@Url.Action("UpdateStatusCareerJob", "Career", new { Status = 1,CareerJobID = item.CareerJobID })">
                                Approve
                            </a>
                            <a class="btn btn-info" href="@Url.Action("UpdateStatusCareerJob", "Career", new { Status = 2,CareerJobID = item.CareerJobID })">
                                Reject
                            </a>
                        </td>
                    </tr>
                    <div class="modal fade" id="detailModal_@item.CareerModel.ID" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Details</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <!-- Include the details you want to display -->
                                    <dl class="row">
                                        <dt class="col-sm-2">Title:</dt>
                                        <dd class="col-sm-10">
                                            <input class="form-control" value="@item.CareerModel.Title" readonly>
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-2">Short Description:</dt>
                                        <dd class="col-sm-10">
                                            <textarea class="form-control" rows="10" cols="250" readonly>@item.CareerModel.ShortDescription</textarea>
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-2">Time Start:</dt>
                                        <dd class="col-sm-10">
                                            <input class="form-control" value="@item.CareerModel.TimeStart.ToString("dd-MM-yyyy")" readonly>
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-2">Time End:</dt>
                                        <dd class="col-sm-10">
                                            <input class="form-control" value="@item.CareerModel.TimeEnd.ToString("dd-MM-yyyy")" readonly>
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-2">Description:</dt>
                                        <dd class="col-sm-10">
                                            <textarea class="form-control" rows="10" cols="250" readonly>@item.CareerModel.Description</textarea>
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-2">Price:</dt>
                                        <dd class="col-sm-10">
                                            <input class="form-control" value="@item.CareerModel.Price" readonly>
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-2">Skill:</dt>
                                        <dd class="col-sm-10">
                                            <input class="form-control" value="@item.CareerModel.Skill" readonly>
                                        </dd>
                                    </dl>
                                    <dl class="row">
                                        <dt class="col-sm-2">Position:</dt>
                                        <dd class="col-sm-10">
                                            <input class="form-control" value="@item.CareerModel.Position" readonly>
                                        </dd>
                                    </dl>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
               
            </tbody>
        </table>
    </div>
</div>
