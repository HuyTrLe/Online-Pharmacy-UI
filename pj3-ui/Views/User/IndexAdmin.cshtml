@using pj3_ui.Models.User;
@model List<UserModelResult>;

@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="d-flex justify-content-center">
    <div class="table-responsive">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Create Date</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.UserModel.ID
                        </td>
                        <td>
                            @item.UserModel.UserName
                        </td>
                        <td>
                            @item.UserModel.Email
                        </td>
                        <td>
                            @item.UserModel.PhoneNumber
                        </td>                     
                        <th>
                            @item.UserModel.CreateDate
                        </th>
                        <th>
                            @{
                                var role = item.UserModel.RoleID == 1 ? "Admin" : "User";
                            }    
                            @role
                        </th>
                        <td>
                            <a class="btn btn-info" href="@Url.Action("DetailAdminUpdate", "User", new { ID = item.UserModel.ID })">
                                Update Role
                            </a>
                        </td>                     
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
