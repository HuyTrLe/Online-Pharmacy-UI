@using pj3_ui.Models.User;

@model UserModelResult

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Name</label><input type="text" class="form-control" placeholder="first name" value="@Model.UserModel.UserName"></div>
                    <div class="col-md-6"><label class="labels">Email</label><input type="text" class="form-control" placeholder="surname" value="@Model.UserModel.Email"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Phone Number</label><input type="text" class="form-control" placeholder="enter phone number" value="@Model.UserModel.PhoneNumber"></div>
                    <div class="col-md-12"><label class="labels">Address</label><input type="text" class="form-control" placeholder="enter address line 1" value="@Model.UserModel.Address"></div>
                </div>            
            </div>
            <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button" id="btnEditProfile">Save Profile</button></div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <button data-toggle="collapse" data-target="#demo" class="btn btn-info profile-button">Education</button><span><button class="btn btn-success profile-button" style="margin-left:10px" type="button" id="btnEditProfile">Add Education</button></span>
                <div id="demo" class="collapse">
                    @{
                        foreach (var item in Model.Education)
                        {
                            <div class="row mt-3">
                                <div class="col-md-6"><label class="labels">School Name</label><input type="text" class="form-control" value="@item.SchoolName"></div>
                                <div class="col-md-6"><label class="labels">Type</label><input type="text" class="form-control" value="@item.SchoolType"></div>
                                <div class="col-md-9"><label class="labels">Degree</label><input type="text" class="form-control" value="@item.Degree"></div>
                                <div class="col-md-6"><label class="labels">From</label><input type="date" class="form-control" value="@item.From"></div>
                                <div class="col-md-6"><label class="labels">To</label><input type="date" class="form-control" value="@item.To"></div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<!-- Template CSS -->
<link rel="stylesheet" href="~/assets/css/User/Index.css">
<link rel="stylesheet" href="~/assets/css/style-starter.css">
<!-- JS -->
<script src="~/js/User/DetailUpdate.js"></script>